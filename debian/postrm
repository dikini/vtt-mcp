#!/bin/bash
set -e

# Post-remove script for vtt-mcp

case "$1" in
    purge)
        echo "Purging vtt-mcp..."
        
        # Remove user and data directories if purging
        if id vtt-mcp &>/dev/null; then
            userdel vtt-mcp || true
        fi
        
        rm -rf /var/lib/vtt-mcp
        rm -rf /var/log/vtt-mcp
        rm -rf /etc/vtt-mcp
        ;;
    
    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        ;;
    
    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

exit 0
