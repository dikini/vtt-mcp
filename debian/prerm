#!/bin/bash
set -e

# Pre-remove script for vtt-mcp

case "$1" in
    remove|upgrade|deconfigure)
        # Stop the service if it's running
        if systemctl is-active --quiet vtt-mcp; then
            echo "Stopping vtt-mcp service..."
            systemctl stop vtt-mcp || true
        fi
        ;;
    
    failed-upgrade)
        ;;
    
    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

exit 0
